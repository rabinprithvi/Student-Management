

<div id="logout" > <%= link_to "Home" , administrator_path %>>><%= link_to "Logout" , root_url %> </div>

<div id="student_new">



<div id=notice><h3><%= flash[:notice]%></h3></div>

<p><b>Student Enrollment Form</b><p>

<%= form_for @student, :url => { :action => "create" } do |f| %>
	 
   <p>
    <%= f.label :name %> 
    <%= f.text_field :name %> 
   </p>
  
  <p>
     <%= f.label :classroom %> 
       <%= f.select :classroom, [1, 2 ] %>
  
  <p>
     <%= f.label :dob %>
     <%= f.date_select :dob %>
  </p>
 

   <p>
    <%= f.label :gender %>
    <%= f.radio_button :gender, 'm' , :checked => 'checked' %> m
    <%= f.radio_button :gender, 'f' %> f 
   </p>
  
  <p>
    <%= f.label :religion %> 
    <%= f.select :religion ,['Hindu' , 'Muslim' , 'Christain'] %> 
  </p>

  <p>
    <%= f.label :address %></br>
    <%= f.text_field :address %> 
  </p>

  <p>
     <%= f.submit "Create" %>
  </p>

<% end %>

</div>