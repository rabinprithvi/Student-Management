
<div id="login">

<h1>Student Management</h1>



<div id="notice"><h3><%= flash[:notice]  %></h3></div>

<%= form_tag(authenticate_path, :method => "post") do %>

	<p>
		<%= label_tag(:q, "Username:") %>
  		<%= text_field_tag(:uname) %>
	</p>
    
    <p>
    	<%= label_tag(:q, "Password:") %>
  		<%= password_field_tag(:pword) %>
    </p>

    <p>
    	<%= submit_tag("Login") %>
    </p>

    <p> Hint : Username -  admin &  Password - 123</p>

  
  
<% end %>
</div>