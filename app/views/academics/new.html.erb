<%= link_to "Home" , administrator_path %></br>
<div id=notice><h3><%= flash[:notice]%></h3></div>


<p><b>Student Academic Form</b></p>

<%= label_tag 'class', 'Select a class :' %>


  <%= form_tag(new_academic_path, :method => "get") do %>
  <%= select_tag(:class ,options_for_select([[1, 1], [2, 2], [3, 3]],@class),
          :onchange => 'this.form.submit()') %>
          <% end %>





<%= form_for @academic, :url => { :action => "create" } do |f| %>
	   <%= f.error_messages %>
     <p>
    	<%= f.label :name %> </br>
    	<%= f.select :student_id, options_from_collection_for_select(@students, "id", "name") %>
   </p>

 	<p>
      <%= f.label :term %> </br>
      <%= f.select :term, ['Quarterly', 'Half yearly' ,'Annualy'] %>
   </p>

   <p>
    <%= f.label :sub1 %> </br>
    <%= f.select :sub1, [50,60,70,80,90,100] %>
   </p>

   <p>
    <%= f.label :sub2 %> </br>
    <%= f.select :sub2, [50,60,70,80,90,100] %>
   </p>

   <p>
    <%= f.label :sub3 %> </br>
    <%= f.select :sub3, [50,60,70,80,90,100] %>
   </p>

   <p>
    <%= f.label :sub4 %> </br>
    <%= f.select :sub4, [50,60,70,80,90,100] %>
   </p>

   <p>
    <%= f.label :sub5 %> </br>
    <%= f.select :sub5, [50,60,70,80,90,100] %>
   </p>

   <p>
    <%= f.label :total %> </br>
    <%= f.text_field :total , :size => '1' %>
   </p>

  <p>
    <%= f.label :rank %> </br>
    <%= f.text_field :rank , :size => '1' %>
   </p>
  
  <p>
     <%= f.submit "Create"  %>
  </p>

 
   
 <% end %>


